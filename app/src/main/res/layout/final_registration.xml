                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="@+id/shift"
                    app:layout_constraintRight_toLeftOf="@+id/shift"
                    app:layout_constraintTop_toTopOf="@+id/shift"
                    tools:ignore="RtlHardcoded" />

                <RadioButton
                    android:id="@+id/radio_shift_second"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/vazirmatn_medium"
                    android:layoutDirection="ltr"
                    android:text="@string/Second"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="@+id/shift"
                    app:layout_constraintRight_toLeftOf="@+id/radio_shift_first"
                    app:layout_constraintTop_toTopOf="@+id/shift"
                    tools:ignore="RtlHardcoded" />

                <RadioButton
                    android:id="@+id/radio_shift_first"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:fontFamily="@font/vazirmatn_medium"
                    android:layoutDirection="ltr"
                    android:text="@string/First"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="@+id/shift"
                    app:layout_constraintLeft_toLeftOf="@+id/edit_text_3_final"
                    app:layout_constraintRight_toLeftOf="@+id/radio_shift_second"
                    app:layout_constraintTop_toTopOf="@+id/shift"
                    tools:ignore="RtlHardcoded" />
            </RadioGroup>

            <LinearLayout
                android:id="@+id/inbound_tracking_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/shift">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginTop="14dp"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/add_layout_inbound_code"
