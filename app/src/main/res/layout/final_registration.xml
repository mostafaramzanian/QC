                        android:layout_height="30dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="14dp"
                        android:background="@drawable/add_final_registr"
                        tools:ignore="RtlHardcoded" />

                    <androidx.appcompat.widget.AppCompatEditText
