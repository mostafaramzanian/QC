<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_doc"
    android:layout_width="match_parent"

    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/doc_inner_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/background_documents"
        android:maxHeight="400dp"
        android:minHeight="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintTop_toTopOf="@+id/top_guideline3">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_doc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="22dp"
            android:paddingTop="30dp"
            android:paddingBottom="90dp"
            app:layout_constraintBottom_toBottomOf="@+id/doc_inner_layout"
            app:layout_constraintLeft_toLeftOf="@+id/doc_inner_layout"
            app:layout_constraintRight_toRightOf="@+id/doc_inner_layout"
            app:layout_constraintTop_toTopOf="@+id/doc_inner_layout" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title_doc2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="355dp"
        android:background="@drawable/back_doc"
        android:fontFamily="@font/vazirmatn_bold"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="@string/Doc"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintTop_toBottomOf="@+id/guidelineRight"
        app:layout_constraintRight_toRightOf="@+id/doc_inner_layout"
        tools:ignore="RtlHardcoded" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.124" />
</androidx.constraintlayout.widget.ConstraintLayout>